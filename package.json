{
    "name": "Entrega",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "prepare": "husky install",
        "pre-commit": "pretty-quick --staged",
        "postcommit": "git update-index -g",
        "pretty": "prettier --write \"./**/*.{css,scss,html,js,jsx,json}\"",
        "format": "prettier --write .",
        "go": " pretty-quick --staged && format && pretty"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "husky": "^5.2.0",
        "prettier": "2.2.1",
        "pretty-quick": "^3.1.0",
        "sass": "^1.32.8"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged && yarn format && git add -A ."
        }
    },
    "dependencies": {
        "lint-staged": "^10.5.4"
    },
    "lint-staged": {
        "*.{js,json,css,md,html}": [
            "npm run lint:fix",
            "prettier --single-quote --write",
            "git add"
        ]
    }
}
