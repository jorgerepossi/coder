{
    "name": "Entrega",
    "version": "1.0.1",
    "description": "",
    "main": "index.js",
    "scripts": {
        "build-css": "node-sass --include-path scss sass/main.scss css/main.css && scss sass/bts.scss css/bts.css",
        "w": "nodemon -e scss -x \"npm run build-css\"",
        "prepare": "husky install",
        "pre-commit": "pretty-quick --staged",
        "postcommit": "git update-index -g",
        "pretty": "prettier --write \"./**/*.{css,scss,html,js,jsx,json}\"",
        "format": "prettier --write .",
        "go": "npm run pretty  && npm run postcommit"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "husky": "^5.2.0",
        "node-sass": "^5.0.0",
        "nodemon": "^2.0.7",
        "prettier": "2.2.1",
        "pretty-quick": "^3.1.0",
        "sass": "^1.32.8"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged && yarn format && git add -A ."
        }
    },
    "dependencies": {
        "lint-staged": "^10.5.4"
    },
    "lint-staged": {
        "*.{js,json,css,md,html}": [
            "npm run lint:fix",
            "prettier --single-quote --write",
            "git add"
        ]
    }
}
